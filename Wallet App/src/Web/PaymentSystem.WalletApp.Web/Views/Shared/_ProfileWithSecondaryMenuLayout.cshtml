@model PaymentSystem.WalletApp.Web.ViewModels.Profile.ProfileLayout.ProfileLayoutUserModel

@{
    Layout = "_ProfileLayout.cshtml";
}

@section SecondaryMenu
{
    <div class="bg-primary">
        <div class="container d-flex justify-content-center">
            <ul class="nav secondary-nav">
                <li class="nav-item">
                    <a is-active-route="active" asp-area="Profile" asp-controller="Users" asp-action="Index" class="nav-link">Profile</a>
                </li>
                <li class="nav-item">
                    <a is-active-route="active" asp-area="Profile" asp-controller="Financials" asp-action="Index" class="nav-link">Cards & Bank Accounts</a>
                </li>
                <li class="nav-item">
                    <a is-active-route="active" asp-area="Profile" asp-controller="Accounts" asp-action="Index" class="nav-link">Coin Accounts</a>
                </li>
            </ul>
        </div>
    </div>
}

@section Styles{
    @await this.RenderSectionAsync("Styles", required: false)
}

@section Scripts{
    @await this.RenderSectionAsync("Scripts", required: false)
}

@this.RenderBody();
