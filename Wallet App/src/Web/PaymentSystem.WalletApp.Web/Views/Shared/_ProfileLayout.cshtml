@model PaymentSystem.WalletApp.Web.ViewModels.Profile.ProfileLayout.ProfileLayoutUserModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section SecondaryMenu{
    @await this.RenderSectionAsync("SecondaryMenu", required: false)
}

@section Styles{
    @await this.RenderSectionAsync("Styles", required: false)
}

@section Scripts{
    @await this.RenderSectionAsync("Scripts", required: false)
}

<div class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 text-danger" asp-validation-summary="All"></div>
            <!-- Left Panel ============================================= -->
            <aside class="col-lg-3">

                <!-- Profile Details  =============================== -->
                <div class="bg-light shadow-sm rounded text-center p-3 mb-4">
                    <div class="profile-thumb mt-3 mb-4">
                        <img class="rounded-circle" src="@this.Model.ProfilePictureAddress" alt="">
                    </div>
                    <p class="text-3 font-weight-500 mb-2">@this.Model.FirstName @this.Model.LastName</p>
                </div>
                <!-- Profile Details End -->

                <!-- Available Balance =============================== -->
                <div class="bg-light shadow-sm rounded text-center p-3 mb-4">
                    <div class="text-17 text-light my-3"><i class="fas fa-wallet"></i></div>
                    <h3 class="text-9 font-weight-400">P @this.Model.TotalBalance.ToString("F2")</h3>
                    <a asp-area="" asp-controller="Accounts" asp-action="Index" class="mb-2 opacity-8">Available Balance</a>
                    <hr class="mx-n3">
                    <div class="d-flex">
                        <a asp-area="" asp-controller="Transfers" asp-action="Withdraw" class="btn-link mr-auto">Withdraw</a> 
                        <a asp-area="" asp-controller="Transfers" asp-action="Deposit" class="btn-link ml-auto">Deposit</a>
                    </div>
                </div>
                <!-- Available Balance End -->
            </aside>
            <!-- Left Panel End -->

            @this.RenderBody()
        </div>
    </div>
</div>