@model PaymentSystem.WalletApp.Web.ViewModels.ProfileLayout.ProfileLayoutUserModel

@{
    Layout = "_Layout.cshtml";
}

@section SecondaryMenu
{
    <div class="bg-primary">
        <div class="container d-flex justify-content-center">
            <ul class="nav secondary-nav">
                <li class="nav-item">
                    <a is-active-route="active" asp-area="" asp-controller="Users" asp-action="Profile" class="nav-link">Profile</a>
                </li>
                <li class="nav-item">
                    <a is-active-route="active" asp-area="" asp-controller="Financials" asp-action="Profile" class="nav-link">Cards & Bank Accounts</a>
                </li>
                <li class="nav-item">
                    <a is-active-route="active" asp-area="" asp-controller="Accounts" asp-action="Profile" class="nav-link">Coin Accounts</a>
                </li>
            </ul>
        </div>
    </div>
}

@section Styles{
    @await this.RenderSectionAsync("Styles", required: false)
}

@section Scripts{
    @await this.RenderSectionAsync("Scripts", required: false)
}

<div class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 text-danger" asp-validation-summary="All"></div>
            <!-- Left Panel ============================================= -->
            <aside class="col-lg-3">

                <!-- Profile Details  =============================== -->
                <div class="bg-light shadow-sm rounded text-center p-3 mb-4">
                    <div class="profile-thumb mt-3 mb-4">
                        <img class="rounded-circle" src="@this.Model.ProfilePictureAddress" alt="">
                        <form method="post">
                            <div class="profile-thumb-edit custom-file bg-primary text-white" data-toggle="tooltip" title="Change Profile Picture">
                                <i class="fas fa-camera position-absolute"></i>
                                <input type="file" class="custom-file-input" id="customFile">
                            </div>
                        </form>
                    </div>
                    <p class="text-3 font-weight-500 mb-2">@this.Model.FirstName @this.Model.LastName</p>
                </div>
                <!-- Profile Details End -->

                <!-- Available Balance =============================== -->
                <div class="bg-light shadow-sm rounded text-center p-3 mb-4">
                    <div class="text-17 text-light my-3"><i class="fas fa-wallet"></i></div>
                    <h3 class="text-9 font-weight-400">P @this.Model.TotalBalance.ToString("F2")</h3>
                    <p class="mb-2 text-muted opacity-8">Available Balance</p>
                    <hr class="mx-n3">
                    <div class="d-flex"><a href="withdraw-money.html" class="btn-link mr-auto">Withdraw</a> <a href="deposit-money.html" class="btn-link ml-auto">Deposit</a></div>
                </div>
                <!-- Available Balance End -->
            </aside>
            <!-- Left Panel End -->

            @this.RenderBody()
        </div>
    </div>
</div>


