<!-- Transaction Item Details Modal =========================================== -->
<div id="transaction-detail" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered transaction-details" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row no-gutters">
                    <div class="col-sm-5 d-flex justify-content-center bg-primary rounded-left py-4">
                        <div class="my-auto text-center">
                            <div class="text-17 text-white my-3"><i class="fas fa-building"></i></div>
                            <h3 class="text-4 text-white font-weight-400 my-3">XXX</h3>
                            <div id="total-amount-header" class="text-8 font-weight-500 text-white my-4">00.00P</div>
                            <p id="date-header" class="text-white"></p>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <h5 class="text-5 font-weight-400 m-3">
                            Transaction Details
                            <button type="button" class="close font-weight-400" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                        </h5>
                        <hr>
                        <div class="px-3">
                            <ul class="list-unstyled">
                                <li class="mb-2">Payment Amount <span id="payment-amount" class="float-right text-3">00.00P</span></li>
                                <li class="mb-2">Fee <span id="transaction-fee" class="float-right text-3">-0.00P</span></li>
                            </ul>
                            <hr class="mb-2">
                            <p class="d-flex align-items-center font-weight-500 mb-4">
                                Total Amount
                                <span id="total-amount" class="text-3 ml-auto">00.00P</span>
                            </p>
                            <ul class="card list-unstyled coin-account-details-card">
                                <li class="font-weight-500">Sender Address:</li>
                                <li id="sender-address" class="text-muted">XXXX</li>
                            </ul>
                            <ul class="card list-unstyled coin-account-details-card">
                                <li class="font-weight-500">Recipient Address:</li>
                                <li id="recipient-address" class="text-muted">XXXX</li>
                            </ul>
                            <ul class="card list-unstyled coin-account-details-card">
                                <li class="font-weight-500">Transaction Hash:</li>
                                <li id="transaction-hash" class="text-muted">-----</li>
                            </ul>
                            <ul class="card list-unstyled coin-account-details-card">
                                <li class="font-weight-500">Block Hash:</li>
                                <li id="block-hash" class="text-muted">-----</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Transaction Item Details Modal End -->