@model PaymentSystem.WalletApp.Web.ViewModels.Administration.Accounts.AccountListingAdminPartialModel

<div class="bg-light shadow-sm rounded py-4 mb-4">
    <h3 class="text-5 font-weight-400 d-flex align-items-center px-4 mb-3">@Model.Title</h3>

    <!-- Title =============================== -->
    <div class="transaction-title py-2 px-4">
        <div class="row">
            <div class="col-2">Username</div>
            <div class="col-7">Address</div>
            <div class="col-2">Balance</div>
            <div class="col-1">Has Key</div>
        </div>
    </div>
    <!-- Title End -->

    <div>
        @foreach (var account in this.Model.Accounts)
        {
            <div class="transaction-item px-4 py-3">
                <a asp-area="Administration" asp-controller="Accounts" asp-action="Details" asp-route-address="@account.Address" class="text-reset text-decoration-none row align-items-center flex-row">
                    <div class="col-2">
                        <span class="text-2">@account.User</span>
                    </div>
                    <div class="col-7">
                        <span class="text-4">
                            @account.FriendlyAddress
                        </span>
                    </div>
                    <div class="col-2">
                        <span class="text-4">
                            @account.Balance.ToString("F2") P
                        </span>
                    </div>
                    <div data-toggle="tooltip" title="Has Stored Key" class="col-1">
                        <has-data class="text-5 d-block text-success mt-4 mb-3" exists="@account.HasKey"></has-data>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
