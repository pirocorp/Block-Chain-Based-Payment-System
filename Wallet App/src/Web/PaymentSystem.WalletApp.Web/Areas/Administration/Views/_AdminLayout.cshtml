@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section SecondaryMenu{
<div class="bg-light shadow-sm rounded p-4 mb-4">
    <ul class="row profile-completeness nav secondary-nav alternate">

        <li class="col-sm-6 col-md-3 mb-4 mb-md-0 nav-item">
            <div class="border rounded p-3 text-center">
                <span class="d-block text-10 text-light mt-2 mb-3">
                    <i class="fas fa-users-cog"></i>
                </span>
                <p class="mb-0">
                    <a class="nav-link" is-active-route="active" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </p>
            </div>
        </li>

        <li class="col-sm-6 col-md-3 mb-4 mb-md-0 nav-item">
            <div class="border rounded p-3 text-center">
                <span class="d-block text-10 text-light mt-2 mb-3">
                    <i class="fas fa-users"></i>
                </span>
                <p class="mb-0">
                    <a class="nav-link" is-active-route="active" asp-area="Administration" asp-controller="Users" asp-action="Index">Users</a>
                </p>
            </div>
        </li>

        <li class="col-sm-6 col-md-3 mb-4 mb-sm-0 nav-item">
            <div class="border rounded p-3 text-center">
                <span class="d-block text-10 text-light mt-2 mb-3">
                    <i class="fas fa-file-invoice-dollar"></i>
                </span>
                <p class="mb-0">
                    <a class="nav-link" is-active-route="active" asp-area="Administration" asp-controller="Accounts" asp-action="Index">Accounts</a>
                </p>
            </div>
        </li>

        <li class="col-sm-6 col-md-3  nav-item">
            <div class="border rounded p-3 text-center">
                <span class="d-block text-10 text-light mt-2 mb-3">
                    <i class="fab fa-hive"></i>
                </span>
                <p class="mb-0">
                    <a class="nav-link" is-active-route="active" asp-area="Administration" asp-controller="Blocks" asp-action="Index">Blocks</a>
                </p>
            </div>
        </li>
    </ul>
</div>
}

@section Styles{
    @await this.RenderSectionAsync("Styles", required: false)
}

@section Scripts{
    @await this.RenderSectionAsync("Scripts", required: false)
}

<!-- Content -->
<div class="col-12 text-danger" asp-validation-summary="All"></div>
@this.RenderBody()

<!-- Content End -->
